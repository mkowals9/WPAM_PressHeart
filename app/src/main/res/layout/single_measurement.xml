<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="#80B85028"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="#99EAABAB"
    app:cardCornerRadius="9dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/Date_label_linerlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:textColor="@color/colorAccent5"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/date_Measurement_Browse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Whenever"
                android:textColor="@color/colorAccent5"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/DiastolicBP_label_linerlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diastolic Blood Pressure:"
                android:textColor="@color/colorAccent5"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/diastolicBP_Measurement_Browse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="200"
                android:textColor="@color/colorAccent5"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/SystolicBP_label_linerlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Systolic Blood Pressure:"
                android:textColor="@color/colorAccent5"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/systolicBP_Measurement_Browse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="200"
                android:textColor="@color/colorAccent5"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Mood_label_linerlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mood:"
                android:textColor="@color/colorAccent5"
                android:textSize="16dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/mood_Measurement_Browse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Whatever"
                android:textColor="@color/colorAccent5"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Buttons_linerlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/changeMeasurementButton"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/buttonsM"
                android:text="Change"
                android:textColor="@color/colorAccent4"
                android:textSize="14sp" />

            <View
                android:layout_width="20dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/deleteMeasurementButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/buttonsM"
                android:text="Delete"
                android:textColor="@color/colorAccent4" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>