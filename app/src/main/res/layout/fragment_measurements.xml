<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="MEASUREMENTS"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="36sp" />

        <Button
            android:id="@+id/AddNewMeasurementButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/colorAccent"
            android:text="Add new measure"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/BrowseMeasurementsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/colorAccent2"
            android:text="Browse your measurements"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/BackToMainFromMeasureButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/colorAccent3"
            android:text="Back to main menu"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>