<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MedicinesFragment"
    android:id="@+id/BrowseMedicinesFragment"
    >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/medicinesList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        tools:listitem="@layout/single_medicine" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingAddMedicineButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end|bottom"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="center"
        app:backgroundTint="#DC7474"
        app:maxImageSize="36dp"
        app:srcCompat="@drawable/ic_add_white_plus"
        tools:ignore="MissingConstraints,VectorDrawableCompat"
        android:contentDescription="plus" />

</RelativeLayout>